<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addnote">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#FFFFFF"/>
    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:layout_above="@+id/bottom_navigation"
        android:background="@drawable/color">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp">
            <EditText
                android:id="@+id/notetitle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="新增備忘錄"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notetitle"
                android:id="@+id/ingredientView"
                android:text="食材"
                android:textSize="28dp"/>
            <LinearLayout
                android:id="@+id/ingredientLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ingredientView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredient1Layout"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ingredientLayout"
                android:id="@+id/addIngredient"
                android:layout_marginTop="20dp"
                android:text="新增食材 +"
                android:textSize="28dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/shape_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hashtagText"
                android:layout_below="@+id/addIngredient"
                android:text="Hashtag"
                android:textSize="28dp"/>
            <EditText
                android:id="@+id/tag_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hashtagText"
                android:textSize="20dp"
                android:minHeight="48dp"/>
            <Button
                android:id="@+id/adduseButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tag_input"
                android:layout_marginTop="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_button"
                android:text="+Add note"
                android:textSize="25dp"
                android:onClick="addButton"/>


        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation"/>
</RelativeLayout>